<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".songFrag">

    <View
        android:id="@+id/title_bar_container_song"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/title_text_songpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:textSize="30sp"
        android:fontFamily="sans-serif-black"
        app:layout_constraintStart_toStartOf="@+id/title_bar_container_song"
        app:layout_constraintTop_toTopOf="@+id/title_bar_container_song" />

    <View
        android:id="@+id/sub_text_holder_song"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar_container_song" />

    <TextView
        android:id="@+id/songTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:paddingStart="40dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/sub_text_holder_song"
        app:layout_constraintStart_toStartOf="@+id/sub_text_holder_song"
        app:layout_constraintTop_toBottomOf="@+id/title_bar_container_song" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/song_recycler"
        android:layout_width="match_parent"
        android:layout_height="666dp"

        android:overScrollMode="never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sub_text_holder_song"
        />

</androidx.constraintlayout.widget.ConstraintLayout>